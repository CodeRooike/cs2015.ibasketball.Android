            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardElevation="16dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/ui_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_user_avatar"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="left"
                            android:src="@drawable/test_user_avator" />

                        <TextView
                            android:id="@+id/tv_user_welcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/iv_user_avatar"
                            android:paddingLeft="16dp"
                            android:text="@string/user_welcome"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_user_welcome"
                            android:layout_toRightOf="@id/iv_user_avatar"
                            android:paddingLeft="16dp"
                            android:text="@string/test_user_name"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_logout"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_close"
                            android:tint="@color/dark_gray" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ui_header"
                            android:layout_marginBottom="6dp"
                            android:text="我的信息"
                            android:textColor="#212121"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_user_addr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ui_header"
                            android:layout_marginBottom="6dp"
                            android:text="@string/test_user_addr" />

                        <TextView
                            android:id="@+id/tv_user_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ui_header"
                            android:layout_marginBottom="6dp"
                            android:text="@string/test_user_intro" />

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:columnCount="2"
                            android:rowCount="1">

                            <Button
                                android:id="@+id/b_user_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的帖子" />

                            <Button
                                android:id="@+id/b_user_collection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的收藏" />

                        </GridLayout>

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


