<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:visibility="visible"
    app:cardElevation="16dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ui_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_news_pic"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/test_pic"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_news_pic"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/test_news_title"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_news_shortContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ui_header"
            android:layout_margin="15dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/test_news_shortDescription" />


    </RelativeLayout>
</android.support.v7.widget.CardView>